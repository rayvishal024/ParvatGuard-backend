# Server Configuration
PORT=4000
NODE_ENV=development
CORS_ORIGIN=*

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=parvatguard
DB_USER=postgres
DB_PASSWORD=postgres
DB_TEST_NAME=parvatguard_test
DB_SSL=false
# Optional: Full connection string (Neon, Heroku, etc.). If provided, this will be
# used in preference to the DB_HOST/DB_USER/... settings. Example:
# DATABASE_URL=postgresql://username:password@host:5432/dbname
# When using Neon, ensure SSL is enabled (Neon requires TLS). The Knex config
# in this repo will set ssl: { rejectUnauthorized: false } for DATABASE_URL.
#DATABASE_URL=

# JWT Configuration
JWT_ACCESS_SECRET=change-me-access-secret
JWT_REFRESH_SECRET=change-me-refresh-secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Logging
LOG_LEVEL=info

# Twilio Configuration (optional - for SMS alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
